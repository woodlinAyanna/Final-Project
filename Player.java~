import java.util.ArrayList;
public class Player {
  private String name;
  private int coins;
  static Deck playerDeck;
  int value;
  public Player (String aName) 
  {
    name = aName;
    coins = 5000;
    playerDeck = new Deck();
  }
  
  public String getName() 
  {
   return name; 
  }
  public int getCoins()
  {
    return coins;
  }
  
  public void rankValue() {
    if (Card.rank.equalsIgnoreCase("Ace")) {
      value = 1;
    } else if (Card.rank.equalsIgnoreCase("2")) {
      value = 2;
    } else if (Card.rank.equalsIgnoreCase("3")) {
      value = 3;
    } else if (Card.rank.equalsIgnoreCase("4")) {
      value = 4;
    } else if (Card.rank.equalsIgnoreCase("5")) {
      value = 5;
    } else if (Card.rank.equalsIgnoreCase("6")) {
      value = 6;
    } else if (Card.rank.equalsIgnoreCase("7")) {
      value = 7;
    } else if (Card.rank.equalsIgnoreCase("8")) {
      value = 8;
    } else if (Card.rank.equalsIgnoreCase("9")) {
      value = 9;
    } else if (Card.rank.equalsIgnoreCase("10")) {
      value = 10;
    } else if (Card.rank.equalsIgnoreCase("Jack")) {
      value = 11;
    } else if (Card.rank.equalsIgnoreCase("Queen")) {
      value = 12;
    } else if (Card.rank.equalsIgnoreCase("King")) {
      value = 13;
    } 
  }
  
  
}